                                <ul class="nav nav-sm flex-column">
                                    <li class="nav-item">
                                        <a href="/users" class="nav-link"><i class="ri-user-settings-line"></i> Kullanıcılar</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/roles" class="nav-link"><i class="ri-admin-line"></i> Roller</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/authorisations" class="nav-link"><i class="ri-key-2-line"></i> Yetkiler</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/user-roles" class="nav-link"><i class="ri-user-star-line"></i> Kullanıcı Rolleri</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/role-authorisations" class="nav-link"><i class="ri-lock-unlock-line"></i> Rol Yetkileri</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="sidebar-background"></div>
        </div>
        <!-- Left Sidebar End -->
        
        <!-- Vertical Overlay-->
        <div class="vertical-overlay"></div>

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                @RenderBody()
            </div>
            <!-- End Page-content -->

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <script>document.write(new Date().getFullYear())</script> © CryptoPayment
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end d-none d-sm-block">
                                Crypto Payment System
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->

    <!--start back-to-top-->
    <button onclick="topFunction()" class="btn btn-danger btn-icon" id="back-to-top">
        <i class="ri-arrow-up-line"></i>
    </button>
    <!--end back-to-top-->

    <!--preloader-->
